---
import { menuItems } from '@/types/links'
import Link from '@/components/react/link'
---

<div class="border-rich-black-dark flex h-28 flex-col border-b-8">
  {
    menuItems.slice(0, 2).map((item) => (
      <Link
        client:visible
        className="text-platinum bg-rich-black-light text-small justify-start transition-colors hover:bg-rich-dark-jungle/30 h-full pl-3 gap-1"
        href={item.href}
        size="md"
      >
        <item.icon size={20} />
        <span>{item.name}</span>
      </Link>
    ))
  }
</div>
