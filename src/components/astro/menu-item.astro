---
import { menuItems } from '@/types/links'
---

<div class="border-rich-black-dark flex h-28 flex-col border-b-8">
  {
    menuItems.slice(0, 2).map((item) => (
      <a
        class="tap-highlight-transparent data-[focus-visible=true]:outline-focus hover:opacity-hover active:opacity-disabled text-platinum bg-rich-black-light text-small hover:bg-rich-dark-jungle/30 relative inline-flex h-full w-full items-center justify-start gap-1 p-2 pl-3 no-underline outline-hidden transition-opacity data-[focus-visible=true]:z-10 data-[focus-visible=true]:outline-2 data-[focus-visible=true]:outline-offset-2"
        href={item.href}
      >
        <item.icon size={20} />
        <span>{item.name}</span>
      </a>
    ))
  }
</div>
