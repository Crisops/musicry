---
import { type Icon as IconType } from '@lucide/astro'

interface Props {
  icon: typeof IconType
  title: string
  value: number | null
  type: 'songs' | 'albums' | 'artists' | 'users'
}

const { icon: Icon, title, value, type }: Props = Astro.props
---

<div class="bg-rich-black-light rounded-lg p-2 sm:p-3 md:p-4">
  <div class="flex w-full items-center gap-2">
    <div
      class:list={[
        'rounded-md p-3',
        type === 'songs' && 'text-blue-argentinian bg-blue-argentinian/20',
        type === 'albums' && 'bg-indigo-400/20 text-indigo-400',
        type === 'artists' && 'bg-orange-400/20 text-orange-400',
        type === 'users' && 'bg-cyan-400/20 text-cyan-400',
      ]}
    >
      <Icon class="size-5 sm:size-6" />
    </div>
    <div class="overflow-hidden">
      <h3 class="text-tiny sm:text-small text-gray-dim truncate font-normal">
        {title}
      </h3>
      <spam class="text-sealsalt text-2xl font-bold">{value}</spam>
    </div>
  </div>
</div>
