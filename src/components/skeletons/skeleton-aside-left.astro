---
import Skeleton from '@/components/shared/skeleton'
---

<div class="flex h-full w-full flex-col gap-y-1">
  {
    Array.from({ length: 5 }).map((_, index) => (
      <div class={`skeleton-item animate-fade-in-up`} style={`animation-delay: ${index * 150}ms`}>
        <Skeleton
          classNames={{
            base: 'rounded-tl-small rounded-bl-small rounded-br-small relative flex flex-col lg:flex-row lg:inline-flex h-full w-full items-center justify-center gap-1 no-underline outline-hidden transition-opacity lg:justify-start lg:p-2 lg:pl-3',
            wrapperBase: 'flex w-full items-center gap-x-2',
            wrapperContent: 'flex flex-col gap-y-2 w-full h-full justify-center',
            image: 'size-11',
            title: 'rounded-xs h-2 w-22 sm:h-2 sm:w-24 md:h-2.5 md:w-32',
            description: 'h-3 w-2/5 rounded-xs',
          }}
        />
      </div>
    ))
  }
</div>
