---
import Skeleton from '@/components/shared/skeleton'
---

<div class="grid-section relative w-full">
  {
    Array.from({ length: 6 }).map((_, index) => (
      <div class="skeleton-item animate-fade-in-up" style={`animation-delay: ${index * 150}ms`}>
        <Skeleton
          classNames={{
            base: 'rounded-md p-2',
            wrapperBase: 'flex flex-col w-full items-center gap-y-2',
            wrapperContent: 'flex flex-col gap-y-1 w-full h-full items-start px-1 lg:px-2',
            image: 'size-40 lg:size-44 rounded-md',
            title: 'rounded-xs h-2 w-22 sm:h-2 sm:w-24 md:h-2.5 md:w-32',
            description: 'h-3 w-2/5 rounded-xs',
          }}
        />
      </div>
    ))
  }
</div>
